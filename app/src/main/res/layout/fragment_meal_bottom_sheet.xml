<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    style="@style/AppBottomSheetDialogTheme"
    tools:context=".ui.fragment.bottomsheet.MealBottomSheetFragment">


    <ImageView
        android:id="@+id/img_bottom_sheet"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:src="@color/accent"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/_5sdp"/>
    
    <LinearLayout
        android:id="@+id/llBottomSheet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@id/img_bottom_sheet"
        app:layout_constraintTop_toTopOf="@id/img_bottom_sheet"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/_5sdp">

        <TextView
            android:id="@+id/tv_bottom_sheet_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="India"
            android:textColor="@color/g_black"
            android:fontFamily="@font/myfont"
            android:drawableStart="@drawable/ic_location"
            android:drawableTint="@color/g_black"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_bottom_sheet_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chicken"
            android:textColor="@color/g_black"
            android:fontFamily="@font/myfont"
            android:drawableStart="@drawable/ic_category"
            android:drawableTint="@color/g_black"
            android:layout_weight="1"/>

    </LinearLayout>

        <TextView
            android:id="@+id/tvMealName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meal Name"
            android:textColor="@color/g_black"
            android:fontFamily="@font/myfont"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/llBottomSheet"
            app:layout_constraintTop_toBottomOf="@id/llBottomSheet"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read More..."
        android:textColor="@color/g_black"
        android:fontFamily="@font/myfont"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/tvMealName"
        app:layout_constraintTop_toBottomOf="@id/tvMealName"/>


</androidx.constraintlayout.widget.ConstraintLayout>